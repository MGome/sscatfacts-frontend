<div class='container-fluid m-0 p-0'>
  <div class='landing-container'>
    <div class='row layout-row'>
      <%= render '/main/landing_label' %>
      <div class='col-lg-4 offset-lg-3'>
        <div class='d-flex justify-content-center'>
          <div class='container-card landing-card'>
            <div class='d-flex flex-column h-100'>
              <h2 class='text-center mt-4'>Crear usuario</h3>
              <div class='row justify-content-center mb-4 mx-2 h-100'>
                <%= form_tag(users_path, class: 'd-flex flex-column w-100' ) do %>
                  <div class='form-group mt-4 <%= 'mb-0' if @errors.present? %>'>
                    Username:
                    <%= text_field_tag :username, '', class: 'form-control' %>
                  </div>
                  <% if @errors.present? %>
                    <p class='text-danger'><%= @errors %></p>
                  <% end %>
                  <input type='submit' value='Crear' class='btn btn-success w-100 mt-auto'/>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>