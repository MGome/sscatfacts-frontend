<div class='landing-container'>
  <h1 class='text-center font-weight-bold'>Bienvenid@ a SSCatFact! <%= @username %></h1>
  <h5 class='text-center'>A continuación te presentaremos algunos catFacts aleatorios :3</h5>
  <div class='row justify-content-center'>
    <%= link_to 'Mis catFacts favoritos', my_cat_facts_users_path, class: 'btn btn-success' %>
    <%= link_to 'Top 10 catFacts', popular_facts_path, class: 'btn btn-warning' %>
    <%= link_to 'Cerrar sesión', logout_path, class: 'btn btn-danger' %>
  </div>
</div>
<div class='container-fluid d-flex justify-content-center mt-2'>
  <div class='login-card nn-cat-fact-container'>
    <h2 data-fact-id="<%= @fact_id %>" data-user-id="<%= @user_id %>"><%= @fact %></h5>
  </div>
</div>
<div class='d-flex justify-content-center'>
  <div class='col-2'>
    <div class='row justify-content-between'>
      <%= link_to 'Me gusta', 'javascript:void(0);', id: 'nn-like-fact-btn', class: "btn btn-success #{ 'disabled' if @liked_fact}", onclick: 'likeCatFact(this);', data: { like_fact_url: @like_fact_url } %>
      <%= link_to 'Siguiente', 'javascript:void(0);', id: 'nn-change-fact-btn', class: 'btn btn-primary', onclick: 'changeCatFact(this);', data: { get_fact_url: @get_fact_url } %>
    </div>
  </div>
</div>

